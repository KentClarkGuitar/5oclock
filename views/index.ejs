<!DOCTYPE html>
<html>
  <head>
    <title>5oclock</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://fonts.googleapis.com/css?family=Do+Hyeon" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Candal" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=McLaren" rel="stylesheet">


  </head>
  <body>
  
    <div id="nav">
      <ul>
        <li>
          <% if (user) { %>
            <a href="/logout">LOG OUT</a>
          <% } else { %>
            <a href="/auth/google">LOG IN WITH GOOGLE</a>
          <% } %>
        </li>
      </ul>

      <div class="title-link">
        <a class="home-link" href="/home"> 5 o'clock</a>
      </div>

    </div>

    <div class="container">

      <div class="search-panel">
        <h1 class="title">Its 5 o'clock somewhere</h1>

        <div class="search-bar">
          
          <div class="dropdown-panel">
            <form class="form-inline" action="/spots/search" method="GET">
            <select class="category">
                <option>Food</option>
                <option>Drinks</option>
                <option>Food and Drinks</option>
                <option>Other</option>
            </select>
          </div>
              <input type="text" name="location" class="form-control" placeholder="Current Location or Enter City/Zipcode">
              <input type="hidden" name="lat">
              <input type="hidden" name="lng">
              <button type="search" class="btn btn-primary">search</button>
          </form>
        </div>


      </div>

    </div>


    <script>
      navigator.geolocation.getCurrentPosition(position => {
        console.log(position);
        var inp = document.querySelector('input[name="lat"]');
        inp.value = position.coords.latitude;
        inp = document.querySelector('input[name="lng"]');
        inp.value = position.coords.longitude;
      });
    </script>
 
  </body>
</html>


